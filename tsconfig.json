{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {},
    "allowSyntheticDefaultImports": true,
    "types": []
  },
  "include": [
    "typings.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist"
  ]
}
